---
import BlogLayout from "../../layouts/BlogLayout.astro";

import { Content } from "../../blogs/year-report-2024.md";
---

<BlogLayout title="Year Report 2024 Review">
  <div class="content-wrapper">
    <div class="blog-wrapper">
      <Content />
    </div>
    <div class="iframe-wrapper">
      <h2>Interactive Demo</h2>
      <iframe
        width="390px"
        height="700px"
        src="https://charlieop.github.io/2025YearSummary-Preview/"></iframe>
    </div>
  </div>
</BlogLayout>

<style>
  .content-wrapper {
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr auto;
  }
  .iframe-wrapper {
    position: sticky;
    top: calc(50svh - 350px);
    height: fit-content;
  }
  .iframe-wrapper h2 {
    position: absolute;
    top: -1rem;
    left: calc(100%);
    transform-origin: bottom left;
    transform: rotate(90deg);
    text-transform: uppercase;
    white-space: nowrap;
    letter-spacing: 6px;
    word-spacing: 1.5rem;
    font-size: var(--fs-700);
    margin: 0;
  }
  iframe {
    overscroll-behavior: none;
    border: 3px solid var(--clr-text);
    border-radius: 1rem;
  }

  @media screen and (max-width: 950px) {
    .content-wrapper {
      grid-template-columns: 1fr;
    }
    .iframe-wrapper {
      display: none;
    }
  }
  @media screen and (min-width: 1200px) {
    .content-wrapper {
      gap: 4rem;
    }
  }
</style>

